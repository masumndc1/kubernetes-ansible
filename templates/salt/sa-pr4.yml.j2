---
apiVersion: v1
kind: Pod
metadata:
  name: sa-pr4
  labels: 
    app: sa-pr4
spec:
  containers:
     - image: ubuntu-ssh:v1.0
       name: sa-pr4
       ports:
         - containerPort: 22
  restartPolicy: Always
---
apiVersion: v1
kind: Service
metadata:
  name: sa-pr4 
  namespace: default
  labels:
    app: sa-pr4
spec:
  type: ClusterIP
  selector:
    app: sa-pr4
  ports:
  - name: port-22-tcp
    protocol: TCP
    targetPort: 22
    port: 2028
  externalIPs:
  - "{{ controller_ip }}"
