---
apiVersion: v1
kind: Pod
metadata:
  name: sa-dv2
  labels: 
    app: sa-dv2
spec:
  containers:
     - image: ubuntu-ssh:v1.0
       name: sa-dv2
       ports:
         - containerPort: 22
  restartPolicy: Always
---
apiVersion: v1
kind: Service
metadata:
  name: sa-dv2 
  namespace: default
  labels:
    app: sa-dv2
spec:
  type: ClusterIP
  selector:
    app: sa-dv2
  ports:
  - name: port-22-tcp
    protocol: TCP
    targetPort: 22
    port: 2024
  externalIPs:
  - "{{ controller_ip }}"
